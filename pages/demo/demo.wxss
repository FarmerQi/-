/* pages/demo/demo.wxss */
@import '/lib/weui.wxss';

.grids{
  width: 100%;
}

.picContainer{
  margin: auto;
  width: 625rpx;
  display: flex;
  flex-wrap: wrap;
  background: red;
}

.pic{
  float: left;
  margin: 5rpx;
  width: 200rpx;
  height: 200rpx;
  background: skyblue;
}

.addButton{
  float: left;
  position: relative;
  margin: 5rpx;
  width: 197rpx;
  height: 197rpx;
  border: 1rpx solid black;
}

.addButton:before,
.addButton:after{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
          transform: translate(-50%,-50%);
  background-color: black;
}
.addButton:before{
  width: 3rpx;
  height: 100rpx;
}
.addButton:after{
  width: 100rpx;
  height: 3rpx;
}

.addButton:active{
  border-color: #999999;
}

.addButton:active:before,
.addButton:active:after{
  background-color: #999999;
}

.addButtonInput{
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}



